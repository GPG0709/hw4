<div class="row">
  <div class="col-sm-11 text-end">
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </div>

  <div class="col-sm-6">
    <h1> What I did in <%= @place["name"] %> </h1>
  </div>
</div>

<% if @current_user %>
  <div class="row">
    <% for post in @posts %>
      <div class="col-md-4 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="<%= post["image"] %>" class="img-fluid">
        <% end %>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>
  
<%else%>
You must first <a href="/login">login</a> to post
<% end %>